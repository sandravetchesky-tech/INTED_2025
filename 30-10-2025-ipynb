        "\n",
        "# Solicita um número ao usuário\n",
        "numero = float(input(\"Digite um número: \"))\n",
        "\n",
        "# Verifica se o número é maior que 10\n",
        "if numero > 10:\n",
        "    print(\"O número é maior que 10.\")\n",
        "elif numero == 10:\n",
        "    print(\"O número é igual a 10.\")\n",
