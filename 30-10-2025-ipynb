      "cell_type": "code",
      "source": [
        "# Programa para calcular o salário com horas extras\n",
        "\n",
        "# Solicita os dados ao usuário\n",
        "horas_trabalhadas = float(input(\"Digite a quantidade de horas trabalhadas: \"))\n",
        "valor_hora = float(input(\"Digite o valor pago por hora: \"))\n",
        "\n",
        "# Verifica se há horas extras\n",
        "if horas_trabalhadas <= 40:\n",
        "    salario = horas_trabalhadas * valor_hora\n",
        "else:\n",
        "    horas_extras = horas_trabalhadas - 40\n",
        "    salario = (40 * valor_hora) + (horas_extras * valor_hora * 1.5)\n",
        "\n",
        "# Exibe o resultado\n",
        "print(f\"O salário total é R$ {salario:.2f}\")\n"
      ],
      "metadata": {
